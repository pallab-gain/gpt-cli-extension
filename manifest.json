{
  "name": "GTP Assistant",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A simple GTP Assistant for web pages",
  "permissions": ["scripting"],
  "host_permissions": [
    "http://localhost/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
